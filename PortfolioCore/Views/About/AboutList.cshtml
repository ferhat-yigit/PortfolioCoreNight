@model List<About>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Hakkımda Bilgileri</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ana Başlık</th>
        <th>Alt Başlık</th>
        <th>Mail Adresi</th>
        <th>Telefon Numarası</th>
        <th>Şehir</th>
        <th>Alt Başlık 2</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.Title</td>
            <td>@item.SubDescription</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.City</td>
            <td>@item.SubDescription2</td>
            <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/About/CreateAbout/" class="btn btn-primary">Yeni Hakkımda Bilgisi Ekle</a>