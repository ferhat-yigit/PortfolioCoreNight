@model About

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h1>Hakkımda Bilgisi Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" class="form-control" asp-for="AboutId" />

    <label>Ana Başlık</label>
    <input type="text" class="form-control" asp-for="Title" />
    <br />
    <label>Alt Başlık</label>
    <input type="text" class="form-control" asp-for="SubDescription" />
    <br />
    <label>Görsel Yolu</label>
    <input type="url" class="form-control" asp-for="ImageUrl" />
    <br />
    <label>Mail Adresi</label>
    <input type="text" class="form-control" asp-for="Email" />
    <br />
    <label>Telefon Numarası</label>
    <input type="text" class="form-control" asp-for="Phone" />
    <br />
    <label>Şehir</label>
    <input type="text" class="form-control" asp-for="City" />
    <br />
    <label>Alt Başlık 2</label>
    <input type="text" class="form-control" asp-for="SubDescription2" />
    <br />
    <label>Eğitim Seviyesi</label>
    <input type="text" class="form-control" asp-for="Degree" />
    <br />
    <label>Freelance</label>
    <input type="text" class="form-control" asp-for="Freelance" />
    <br />
    <label>Web Site</label>
    <input type="text" class="form-control" asp-for="Website" />
    <br />
    <label>Yaş</label>
    <input type="text" class="form-control" asp-for="Age" />
    <br />
    <label>Doğum Tarihi</label>
    <input type="text" class="form-control" asp-for="Birthday" />
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>