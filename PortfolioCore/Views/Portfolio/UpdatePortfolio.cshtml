@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Proje Güncelleme Sayfası</h2>
<form method="post">
    <input type="hidden" asp-for="PortfolioID" />
    <label>Başlık</label>
    <label>Proje Başlığı</label>
    <input type="text" class="form-control" asp-for="Title" style="border:1px solid black" />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" style="border:1px solid black" />
    <br />
    <label>Görsel URL</label>
    <input type="text" class="form-control" asp-for="ImageUrl" style="border:1px solid black" />
    <br />
    <label>Proje Kategorisi</label>
    <select asp-for="CategoryID" asp-items="ViewBag.v" class="form-control" style="border:1px solid black">
        <option value="">-- Seçiniz --</option>
    </select>
    <br />
    <button class="btn btn-primary">Kaydet</button>

</form>