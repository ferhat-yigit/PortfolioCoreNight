@model Contact
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>İletişim Bilgileri Günelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="ContactId" class="form-control"style="border:1px solid black" />
    <label>Adres</label>
    <input type="text" asp-for="Address" class="form-control" style="border:1px solid black" />
    <br />
    <label>Mail Adresi</label>
    <input type="text" asp-for="Email" class="form-control" style="border:1px solid black" />
    <br />
    <label>Telefon Numarası</label>
    <input type="text" asp-for="PhoneNumber" class="form-control" style="border:1px solid black" />
    <br />
    <label>Lokasyon</label>
    <input type="text" asp-for="Location" class="form-control" style="border:1px solid black" />
    <br />
    <button class="btn btn-info">İletişim Bilgilerini Güncelle</button>
</form>



