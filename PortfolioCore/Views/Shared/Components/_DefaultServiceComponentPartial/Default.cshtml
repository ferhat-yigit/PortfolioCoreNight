@model List<Service>

<section id="services" class="services section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hizmetlerim</h2>
        <p>2000 yılında başladığım Frontend yolculuğu yıllar sonra Backend ile birleşti. Freelance olarak kurum ve kuruluşlara danışmanlık eğitimleri vermekteyim.</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">
            @foreach(var item in Model)
            {        
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                <div class="service-item item-cyan position-relative">
                    <div class="icon">
                            <img src="@item.ImageUrl" width="200" style="margin-bottom:25px;"/>
                    </div>
                    <a href="#" class="stretched-link">
                        <h3>@item.Title</h3>
                    </a>
                    <p>@item.Description</p>
                </div>
            </div><!-- End Service Item -->
            }
        </div>

    </div>

</section>