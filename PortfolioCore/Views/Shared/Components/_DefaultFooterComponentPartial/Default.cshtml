@model List<SocialMedia>
<footer id="footer" class="footer position-relative light-background">
    <div class="container">
        <h3 class="sitename">Ferhat Yiğit</h3>
        <p>"Ayinesi iştir kişinin lafa bakılmaz..."</p>
        <div class="social-links d-flex justify-content-center">
            @foreach (var item in Model)
            {
                <a href="@item.Url"><i class="@item.Icon"></i></a>
            }

        </div>
        <div class="container">
            <div class="copyright">
                <span>Copyright</span> <strong class="px-1 sitename">Ferhat Yiğit</strong>
            </div>
        </div>
    </div>
</footer>