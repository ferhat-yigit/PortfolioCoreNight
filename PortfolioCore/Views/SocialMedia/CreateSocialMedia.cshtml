@model PortfolioCore.Entities.SocialMedia

@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>Yeni Sosyal Medya Ekleme Sayfası</h2>
<form method="post">
    <label>Başlık</label>
    <input type="text" class="form-control" asp-for="Title" style="border:1px solid black" />
    <br />
    <label>Alt Link</label>
    <input type="text" class="form-control" asp-for="Url" style="border:1px solid black" />
    <br />
    <label>İkon</label>
    <input type="text" class="form-control" asp-for="Icon" style="border:1px solid black" />
    <br />    
    <button class="btn btn-primary">Sosyal Medya Ekle</button>

</form>


